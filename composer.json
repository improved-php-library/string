{
    "name": "improved/string",
    "description": "",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Arnold Daniels",
            "email": "arnold@jasny.net",
            "homepage": "http://www.jasny.net"
        }
    ],
    "support": {
        "issues": "https://github.com/improved-php-library/string/issues",
        "source": "https://github.com/improved-php-library/string"
    },
    "require": {
        "php": ">=7.1.0"
    },
    "require-dev": {
        "jasny/php-code-quality": "^2.3"
    },
    "autoload": {
        "files": [
            "src/constants.php",
            "src/functions/string_pad.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Improved\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit",
            "phpstan analyse",
            "phpcs -p src"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
